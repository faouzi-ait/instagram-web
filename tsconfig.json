{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/redux/apiServices/postsApi.js",
    "src/redux/slices/index.js",
    "src/redux/store.ts",
    "src/app/page.js",
    "src/app/components/atomic-components/atoms/input/input.module.tsxcss",
    "src/app/components/atomic-components/molecules/comment-input/CommentInputField.stories.tsx",
    "src/app/components/atomic-components/molecules/comment-input/CommentInputField.spec.tsx"
  ],
  "exclude": ["node_modules"]
}
